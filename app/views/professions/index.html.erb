<h1>Profissões</h1>

<table>
  <tr>
    <th>Nome</th>
  </tr>

<% for profession in @professions %>
  <tr>
    <td><%=h profession.name %></td>
    <td><%= link_to 'Exibir', profession %></td>
    <td><%= link_to 'Editar', edit_profession_path(profession) %></td>
    <td><%= link_to 'Apagar', profession, :confirm => 'Você tem certeza?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />
