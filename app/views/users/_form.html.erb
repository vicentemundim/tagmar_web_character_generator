<div class="textField">
  <%= f.label :login, 'Login:' %>
  <%= f.text_field :login, :focus => true %>
  <%= f.error_message_on 'login', :prepend_text => 'This field ' -%>
</div>

<div class="textField">
  <%= f.label :email, 'E-mail:' %>
  <%= f.text_field :email %>
  <%= f.error_message_on :email, :prepend_text => 'This field ' -%>
</div>

<div class="textField">
  <%= f.label :password, 'Senha:' %>
  <%= f.password_field :password %>
  <%= f.error_message_on :password, :prepend_text => 'This field ' -%>
</div>

<div class="textField">
  <%= f.label :password_confirmation, 'Confirme sua senha:' %>
  <%= f.password_field :password_confirmation %>
  <%= f.error_message_on :password_confirmation, :prepend_text => 'This field ' -%>
</div>