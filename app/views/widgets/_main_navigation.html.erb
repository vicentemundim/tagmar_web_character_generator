<%- content_for :additional_stylesheets do -%>
    <%= stylesheet_link_tag 'navigation' -%>
<%- end -%>

<%-
render_navigation :main do
  add_item do |i|
    i.named 'registre-se'
    i.links_to signup_path
  end unless logged_in?

  add_item do |i|
    i.named 'entrar'
    i.links_to login_path
  end unless logged_in?

  add_item do |i|
    i.named current_user.login
    i.disable!
  end if logged_in?

  add_item do |i|
    i.named 'meu perfil'
    i.links_to edit_user_path(current_user)
  end if logged_in?

  add_item do |i|
    i.named 'sair'
    i.links_to logout_path
  end if logged_in?
end
-%>
