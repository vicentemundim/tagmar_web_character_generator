<h1>Entrar</h1>

<p class="formDescription">Digite seu login e sua senha abaixo:</p>

<% form_tag session_path do -%>
  <fieldset>
    <div class="textField">
      <%= label_tag :login, 'Login:' %>
      <%= text_field_tag :login, nil, :focus => true %>
    </div>

    <div class="textField">
      <%= label_tag :password, 'Senha:' %>
      <%= password_field_tag :password, nil %>
    </div>

    <div class="checkboxField">
      <%= check_box_tag :remember_me, '1', @remember_me %>
      <%= label_tag :remember_me, 'Lembrar-se de mim?' %>
    </div>
  </fieldset>

  <p><%= submit_tag 'Entrar' %></p>
<% end -%>
